<!DOCTYPE html>
<html lang="zh-TW">
<!-- saved from url=(0014)about:internet -->
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Resources.Res.System_Name:@ViewBag.Title</title>
    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" type="text/css">
    <link href="~/Content/bootstrap/css/page.css" rel="stylesheet" type="text/css">
    @RenderSection("css", false)
    <script src="~/Scripts/BrowerInfo.js"></script>
    <script>
        var gb_approot = '@Url.Content("~")';
    </script>
</head>

<body class="@ViewBag.BodyClass">

    <div id="container">
        @if (ViewBag.IsFirstPage)
        { }
        else
        {
            <div id="header" class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        @if (ViewBag.BodyClass == "Menu")
                        {
                            <h4 class="navbar-brand">@Resources.Res.System_Name :: @ViewBag.Title</h4>
                        }
                        else if (ViewBag.BodyClass == "Visit_content")
                        {
                            @* 拜訪中或是檢視中都不可以回主選單 *@
                            <div class="navbar-brand">
                                <ul class="list-inline">
                                    <li><span class="btn btn-primary" disabled><i class="glyphicon glyphicon-th"></i> 回主選單</span></li>
                                    <li><h4>@Resources.Res.System_Name :: @ViewBag.Title</h4></li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <div class="navbar-brand">
                                <ul class="list-inline">
                                    <li><a href="~/Sales/Menu" class="btn btn-primary"><i class="glyphicon glyphicon-th"></i> 回主選單</a></li>
                                    <li><h4>@Resources.Res.System_Name :: @ViewBag.Title</h4></li>
                                </ul>
                            </div>
                        }

                    </div>
                    <div class="navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li>已登入為<strong class="text-danger">王小明</strong> <button class="btn btn-link btn-xs">(登出)</button></li>
                            <li>上次登入時間: 2015/01/01 15:00</li>
                        </ul>
                    </div>
                </div>
            </div>
        }
        <div id="main" class="container">
            @RenderBody()
        </div><!-- main //-->
    </div><!-- container //-->
    <!-- jquery -->
    <script src="http://code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="~/Scripts/app/bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>